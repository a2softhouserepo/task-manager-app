# MongoDB Connection

MONGODB_URI=mongodb://localhost:27017/task-manager
DB_PREFIX=tasks-

# Backup Configuration
# Options: 'daily' (backup a cada 24h) ou 'every_login' (backup a todo login de rootAdmin)
BACKUP_FREQUENCY=daily

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-key-here-min-32-chars
AUTH_PREFIX=tasks-

# Encryption Key for sensitive data (32 bytes / 64 hex chars)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPT_KEY_SECRET=0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef

# SMTP Configuration (opcional - usado apenas para notificações por email)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=Task Manager <your-email@gmail.com>

# Asana API Integration
# Para obter o token: Asana > Configurações > Aplicativos > Criar novo token
# Para obter o Project GID: Abra o projeto no Asana e copie o ID da URL
# Exemplo URL: https://app.asana.com/0/1234567890123456/board → GID = 1234567890123456
ASANA_ACCESS_TOKEN=your-personal-access-token
ASANA_PROJECT_GID=1234567890123456

# Asana Sections (colunas do Board) - Opcional
# Para obter os GIDs das seções, execute no terminal:
# curl -H "Authorization: Bearer SEU_TOKEN" "https://app.asana.com/api/1.0/projects/SEU_PROJECT_GID/sections"
# Isso listará todas as seções com seus GIDs. Configure abaixo para mover tarefas entre colunas:
ASANA_SECTION_PENDING=
ASANA_SECTION_IN_PROGRESS=
ASANA_SECTION_COMPLETED=
ASANA_SECTION_CANCELLED=

# Asana Webhook (Sincronização bidirecional) - Opcional
# O secret é gerado automaticamente durante o handshake do webhook
# Para registrar um webhook: node scripts/register-asana-webhook.js https://seu-dominio.com/api/asana/webhook
ASANA_WEBHOOK_SECRET=
ASANA_WEBHOOK_GID=

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
