# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/task-manager

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-key-here-min-32-chars

# Encryption Key for sensitive data (32 bytes / 64 hex chars)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPT_KEY_SECRET=0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef

# SMTP Configuration for Asana Integration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=Task Manager <your-email@gmail.com>

# Asana Integration
ASANA_EMAIL=x@mail.asana.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
